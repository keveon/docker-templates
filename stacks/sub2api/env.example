# =======================================================================
# Auto Setup (REQUIRED for Docker deployment)
# =======================================================================
AUTO_SETUP = true

# =======================================================================
# Server Configuration
# =======================================================================
SERVER_HOST = 0.0.0.0
SERVER_PORT = 8080
SERVER_MODE = release

# 运行模式: standard (默认) 或 simple (内部自用)
# standard: 完整 SaaS 功能，包含计费/余额校验
# simple: 隐藏 SaaS 功能并跳过计费/余额校验
RUN_MODE = standard

# =======================================================================
# Timezone Configuration
# =======================================================================
TZ = Asia/Shanghai

# =======================================================================
# Database Configuration (PostgreSQL)
# =======================================================================
DATABASE_HOST     = postgres
DATABASE_PORT     = 5432
DATABASE_DBNAME   = sub2api
DATABASE_USER     = sub2api
DATABASE_PASSWORD =  # 必填：设置数据库密码
DATABASE_SSLMODE  = disable

# =======================================================================
# Redis Configuration
# =======================================================================
REDIS_HOST     = redis
REDIS_PORT     = 6379
REDIS_PASSWORD =  # 可选：Redis 密码
REDIS_DB       = 0

# =======================================================================
# Admin Account (auto-created on first run)
# 留空则自动生成
# =======================================================================
ADMIN_EMAIL    =
ADMIN_PASSWORD =

# =======================================================================
# JWT Configuration
# 留空则自动生成（推荐）
# =======================================================================
JWT_SECRET      =
JWT_EXPIRE_HOUR = 24

# =======================================================================
# Gemini OAuth (可选，仅 Gemini OAuth 账号需要)
# =======================================================================
# Sub2API 支持两种 Gemini OAuth 模式：
#
# 1. Code Assist OAuth (需要 GCP project_id)
#    - 使用: cloudcode-pa.googleapis.com (Code Assist API)
#    - 自动 scopes: cloud-platform + userinfo.email + userinfo.profile
#    - OAuth Client: 可使用内置 Gemini CLI client（留空即可）
#
# 2. AI Studio OAuth (不需要 project_id)
#    - 使用: generativelanguage.googleapis.com (AI Studio API)
#    - 默认 scopes: generative-language
#    - OAuth Client: 需要自己的 OAuth 2.0 Client
#    - 配置指南: https://ai.google.dev/gemini-api/docs/oauth
#
GEMINI_OAUTH_CLIENT_ID     =
GEMINI_OAUTH_CLIENT_SECRET =
GEMINI_OAUTH_SCOPES        =
